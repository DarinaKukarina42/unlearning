<!DOCTYPE html>
<html>
  <head>
    <title>UNLearning | <%= yield(:html_title) if content_for?(:html_title) %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;400&display=swap" rel="stylesheet">

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta property="og:image" content='<%= image_url('home.png') %>'/>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>
    <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
      <div class="home">

      <%= link_to home_path, class: "home-button" do %>
        <div class="logo">
        <%= image_tag("circles.png", class: "circles") %>
        </div>
        <% end %>

        <h3 class="unlearning">UnLearning</h3>
      </div>


      <div>
        <%= image_tag("avatar.jpg", class: "avatar" )%>
      </div>
    </div>


    <%= yield %>

      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>

      <div class="footer">
      <%= link_to home_path, class: "home-button" do %>
        <%= image_tag("home.png", class: "home_btn") %>
      <% end %>
      <%= link_to "/search", class: "home-button" do %>
        <%= image_tag("search.png", class: "search_btn") %>
      <% end %>
      <%= link_to "/favorites", class: "home-button" do %>
        <%= image_tag("library.png", class: "library_btn") %>
      <% end %>
      </div>
  </body>
</html>
