
    <div id="carouselExampleControls" class="carousel slide  offset-footer" data-ride="false" data-interval="false">
        <!-- boucle  -->
        <% @contents.each_with_index do |content, index| %>
          <div class="carousel-item <%= index == 0 ? 'active' : "" %>">
            <div class="card-all-content" style="border-left: 15px solid #fafafa;">
              <!-- VIDEO -->
              <% if content.format == "video"  %>
                <div class="card-full-content-video">
                  <%= content_tag(:iframe, '', src: content.content, class: "iframe-video", frameborder: 0) %>
                  <div class="card-video">

                    <div class="favorite-button">
                      <p class=" card-author" style="font-size:15px; padding-left: 50px;"><i class="far fa-id-badge"></i> <%=  content.author %> | <%=  content.published_date %> </p>
                    </div>

                    <div class="card-text-description" id="video-card-text-description">
                      <%= content.description %>
                    </div>

                      <div class="category">
                        <button class="button"><%=  content.category %></button>
                        <%= render "/contents/favorite_button", content: content %>
                      </div>

                    </div>
                  </div>
                <!-- ARTICLE -->
              <% elsif content.format == "article" %>
              <div class="article-main">
                <div class="card-text-title">
                  <h2 style="padding-top: 50px; text-shadow: 1px 1px 2px #fdfffc;"><%= content.title %></h2>
                </div>

                <div class="card-article-full-content"> <!-- start -->

                  <div> <!-- first start -->

                    <%= image_tag content.preview_picture , class: "card-article-img-top"%>
                    <div class="favorite-button">
                      <p class=" card-author" style="font-size:15px; padding-left: 50px;"><i class="far fa-id-badge"></i> <%=  content.author %> | <%=  content.published_date %> </p>
                    </div>
                  </div> <!-- first end -->

                  <div class="card-body-article"> <!-- second start -->

                    <div class="card-text-description">
                      <%= content.description %>
                    </div>

                    <div class="article-content">
                      <div class="article-category">
                        <button class="article-button" style="color: white; background-color: #65C6C4; border:none; border-radius: 10px; height:40px; font-size: 20px; margin-left:10px; width: 200px"><%=  content.category %></button>
                        <span class="article-heart"><%= render "/contents/favorite_button", content: content %></span>
                      </div>
                    </div>
                  </div> <!-- second end -->
                </div>
                </div>
                     <!-- end -->
                <div class="card-article-text-content">
                  <%= content.content.html_safe %>
                </div>
                  
                  

                <!-- PODCAST -->
              <% else %>
              

                  <div class="card-text-title">
                      <%= content.title %>
                  </div>
                  <div class="card-full-content">
                    <div class="image-container">

                      <%= image_tag content.preview_picture , class: "card-img-top"%>
                        <p class="card-podcast-content">
                      <%= audio_tag content.content.html_safe, controls: true %>
                      </p>
                    </div>
                    
                    <div class="card-body-podcast">
                      <div class="card-text-description">
                        <%= content.description %>
                      </div>
                        <div class="category">
                          <button class="button" style="margin-bottom: 100px;"><%=  content.category %></button>
                          <%= render "/contents/favorite_button", content: content %>
                        </div>

                    </div>
                  </div>
              <% end %>
              <a class="carousel-control-next arrow-icon" href="#carouselExampleControls" role="button" data-slide="next">
                <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-arrow-right-circle-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-11.5.5a.5.5 0 0 1 0-1h5.793L8.146 5.354a.5.5 0 1 1 .708-.708l3 3a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708-.708L10.293 8.5H4.5z"/>
                </svg>
              </a>
            </div>
          </div>
        <% end %>

    </div>

      <!-- Green arrow & like button -->


<% content_for(:html_title) { 'Swipe to find the best content' } %>

