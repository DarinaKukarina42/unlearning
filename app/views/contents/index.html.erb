<div class="container">
  <div class="w3-content">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <!-- boucle  -->
        <% @contents.each_with_index do |content, index| %>
        <div class="carousel-item <%= index == 0 ? 'active' : "" %>">
          <div class="card-video">
            <!-- <div class="card-text-title">
                <%= content.title %>
            </div> -->
              <% if content.format == "video"  %>
              <%= content_tag(:iframe, '', src: content.content,
                           width: 400, height: 315, frameborder: 0) %>
                <div class="card-body-video">
                    <div class="card-text-description">
                      <%= content.description %>
                    </div>
                    <div class="category">
                      <%=  content.author %>
                      <%=  content.category %>
                    </div>
                </div>
              <% else %>
                <div class="card-text-title">
                    <%= content.title %>
                </div>
                <%= image_tag content.preview_picture , class: "card-img-top"%>
                <div class="card-body-article">
                  <div class="card-text-description">
                      <%= content.description %>
                      <div class="category">
                      <%=  content.author %>
                      <%=  content.category %>
                    </div>

                  </div>
                <div class="card-text-content">
                      <%= content.content %>
                </div>
              </div>
              <% end %>
          </div>
      </div>
      <% end %>
    <!-- end of boucle  -->
    </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>

    <!-- Green arrow & like button -->
  </div>
<!-- Go to customize content -->
  <div class="customize">
      <a href="/search" class="content_tag">Go to customize content</a>
    </div>
</div>


</div>
