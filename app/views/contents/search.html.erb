
<div class="container">
  <div class="row justify-content" >
    <div class="form-check">
      <%= form_with(url: "/contents", method: "get", local:true, class: 'my_class') do %>

        <div class="content">
          <label class="format" for="inlineFormCustomSelectPref">What format do you want?</label>

          <div class="article">
            <%= check_box_tag(:article) %>
            <%= label_tag(:article, "ARTICLE") %>
          </div>

          <div class="video">
            <%= check_box_tag(:video) %>
            <%= label_tag(:video, "VIDEO") %>
          </div>

          <div class="podcast">
            <%= check_box_tag(:podcast) %>
            <%= label_tag(:podcast, "PODCAST") %>
          </div>
        </div>

        <div>
           <label class="my-1 mr-2" for="inlineFormCustomSelectPref">How much time do yo have ?</label>
          <%= select_tag(:duration, raw('<option value="1">Something quick ! (5 minutes max)</option><option value="2">Less than 20 minutes</option><option value="3">I have got all the time in the world !</option>'), class: "custom-select my-1 mr-sm-2", id: "inlineFormCustomSelectPref") %>
          <%= hidden_field_tag :search, true %>

        </div>

        <div>
           <label class="my-1 mr-2" for="inlineFormCustomSelectPref">What topic?</label>
          <%= select_tag(:category, raw('<option value="1">Tech news</option><option value="2">Health</option><option value="3">International news</option>'), class: "custom-select my-1 mr-sm-2", id: "inlineFormCustomSelectPref") %>
          <%= hidden_field_tag :search, true %>

        </div>

        <div class="buttons">
          <div class="submit_button">
            <%= hidden_field_tag :search, 'true' %>
            <%= submit_tag("Search", class: 'submit_tag') %>
          </div>

        </div>
      <% end %>
    </div>
